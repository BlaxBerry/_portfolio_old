---
import BaseLayout from "@layouts/MainLayout.astro";
import ReactHomeDescription from "@components/react/ReactHomeDescription";
---

<BaseLayout>
  <section class="section-1">
    <h1>Chen's</h1>
    <h1>Portfolio</h1>
  </section>

  <section>
    <ReactHomeDescription client:only="react" />
  </section>
</BaseLayout>

<style lang="scss">
  @import "@styles/variables.scss";

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: calc(100svh - $nav-height - $footer-height);
    color: #eee;
  }

  .section-1 {
    h1 {
      background: $background-image no-repeat center center;
      background-clip: text;
      -webkit-background-clip: text;
      color: transparent;
      font-weight: 700;
      text-align: center;
      -webkit-text-stroke: 2px #eee;
      background-size: cover;
      background-attachment: fixed;
    }

    @media (min-width: 0) {
      font-size: 80px;
    }
    @media (min-width: $breakpoint-sm) {
      font-size: 10svw;
    }
    @media (min-width: $breakpoint-md) {
      font-size: 9svw;
    }
    @media (min-width: $breakpoint-lg) {
      font-size: 7svw;
    }
  }
</style>
