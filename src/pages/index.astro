---
import BaseLayout from "@layouts/MainLayout.astro";
---

<BaseLayout>
  <section class="section-1">
    <h1>Chen's</h1>
    <h1>Portfolio</h1>
  </section>

  <section>
    <div>Hello, my name is Chen</div>
    <div>I am a Creative Developer who is currently based in Tokyo, Japan.</div>
  </section>
</BaseLayout>

<style lang="scss">
  @import "../styles/variables.scss";

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: calc(100svh - $nav-height - $footer-height);
  }

  .section-1 {
    h1 {
      background: $background-image no-repeat center center;
      background-clip: text;
      -webkit-background-clip: text;
      color: transparent;
      font-weight: 700;
      text-align: center;
      -webkit-text-stroke: 2px #eee;
      background-size: cover;
      background-attachment: fixed;
    }

    @media (min-width: 0) {
      font-size: 50px;
    }
    @media (min-width: $breakpoint-sm) {
      font-size: 100px;
    }
    @media (min-width: $breakpoint-md) {
      font-size: 7svw;
    }
  }
</style>
